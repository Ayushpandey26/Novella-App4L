{
  "name": "ChatMessage",
  "type": "object",
  "properties": {
    "content": {
      "type": "string",
      "description": "The message content"
    },
    "sender": {
      "type": "string",
      "enum": [
        "user",
        "ai"
      ],
      "description": "Who sent the message"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When the message was sent"
    },
    "is_streaming": {
      "type": "boolean",
      "default": false,
      "description": "Whether the message is currently streaming"
    }
  },
  "required": [
    "content",
    "sender"
  ]
}