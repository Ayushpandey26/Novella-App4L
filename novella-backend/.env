# Environment Configuration for Novella Backend

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/novella_db

# JWT Configuration
JWT_SECRET=novella_super_secret_jwt_key_change_in_production_2024
JWT_EXPIRATION=24h

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Socket.IO Configuration
SOCKET_CORS_ORIGIN=http://localhost:3000

# Butterfly Generation Settings
BASE_BUTTERFLY_PROBABILITY=0.1
HEART_SYNC_BUTTERFLY_PROBABILITY=0.6
VOICE_MOOD_BUTTERFLY_PROBABILITY=0.3

# Heart Sync Configuration
DEFAULT_SYNC_DURATION=60
SYNC_THRESHOLD=80
MIN_HEART_RATE=40
MAX_HEART_RATE=200

# Voice Analysis (placeholder for future AI integration)
VOICE_ANALYSIS_ENABLED=false
VOICE_ANALYSIS_API_URL=
VOICE_ANALYSIS_API_KEY=

# Email Configuration (for future features)
EMAIL_SERVICE=
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/novella.log

# Security Configuration
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=novella_session_secret_2024

# Monitoring (for production)
ENABLE_METRICS=false
METRICS_PORT=9090